@model int
@{
    Layout = "_LayoutRecruiter";
    var userId = Model;
}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@SharedLocalizer["Job Post List"]</h6>
        <a class="btn btn-success btn-sm" href="/recruiters/jd-posts/create">
            <i class="fa fa-plus"></i>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped custom-datatable" id="jobPostListTable" width="100%" cellspacing="0" data-userId="@userId">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">@SharedLocalizer["Title"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["Working Type"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["End Date"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["Status"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["Status Approval"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["Action"]</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/recruiter-job-post.js"></script>
    <script>
        var stringLocalizer = {
            NoDataAvailable: '@SharedLocalizer["There are no job postings"]'
        }

        var statusApprovalJobPost = {
            Approved : '@SharedLocalizer["Approved"]',
            Rejected: '@SharedLocalizer["Rejected"]',
            PendingApproval: '@SharedLocalizer["PendingApproval"]',
            Banned: '@SharedLocalizer["Banned"]'
        }

        var statusJobPost = {
            Opening: '@SharedLocalizer["Opening"]',
            Closed: '@SharedLocalizer["Closed"]'
        }

        var workingTypeLocalized = {
            Office: '@SharedLocalizer["Office"]',
            Hybird: '@SharedLocalizer["Hybird"]',
            Remote: '@SharedLocalizer["Remote"]'
        }
    </script>
}