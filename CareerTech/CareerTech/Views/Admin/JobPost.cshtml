@{
    Layout = "_LayoutAdmin";
}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@SharedLocalizer["Job Post List"]</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped custom-datatable" id="adminJobPostListTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">@SharedLocalizer["Title"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["Status"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["Status Approval"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["Recruiter"]</th>
                        <th scope="col" class="text-center">@SharedLocalizer["Action"]</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="/js/admin-job-post.js"></script>
    <script>
        var stringAdminJobPost = {
            Opening: '@SharedLocalizer["Opening"]',
            Closed: '@SharedLocalizer["Closed"]',
            Approved: '@SharedLocalizer["Approved"]',
            Rejected: '@SharedLocalizer["Rejected"]',
            PendingApproval: '@SharedLocalizer["PendingApproval"]',
            Banned: '@SharedLocalizer["Banned"]',
            NoJobPost : '@SharedLocalizer["No job applications"]'
        }
    </script>
}
